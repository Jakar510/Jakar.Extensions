<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFrameworks>net9.0-android;net9.0-ios;net9.0-maccatalyst</TargetFrameworks>
		<TargetFrameworks Condition="$([MSBuild]::IsOSPlatform('windows'))">$(TargetFrameworks);net9.0-windows10.0.19041.0</TargetFrameworks>
		<!-- Uncomment to also build the tizen app. You will need to install tizen by following this: https://github.com/Samsung/Tizen.NET -->
		<!-- <TargetFrameworks>$(TargetFrameworks);net9.0-tizen</TargetFrameworks> -->
		<UseMaui>true</UseMaui>
		<SingleProject>true</SingleProject>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>
		<LangVersion>latest</LangVersion>
		<NoWarn>$(NoWarn);1591;IDE0079;CS8424;IDE0046;CS1658;CS1591</NoWarn>
		<OpenApiGenerateDocuments>false</OpenApiGenerateDocuments>
		<GenerateDocumentationFile>True</GenerateDocumentationFile>
		<OpenApiGenerateDocuments>false</OpenApiGenerateDocuments>
		<Version>9.0.0</Version>
		<PackageId>Jakar.Extensions.Maui.Syncfusion</PackageId>
		<Company>Tyler Stegmaier</Company>
		<Authors>Tyler Stegmaier</Authors>
		<PackageProjectUrl>https://github.com/Jakar510/Jakar.Extensions</PackageProjectUrl>
		<Copyright>https://raw.githubusercontent.com/Jakar510/Jakar.Extensions/master/LICENSE.txt</Copyright>
		<PackageTags>Maui Android iOS MacOSX Maccatalyst Windows Syncfusion</PackageTags>
		<RepositoryType>git</RepositoryType>
		<RepositoryUrl>https://github.com/Jakar510/Jakar.Extensions</RepositoryUrl>
		<PackageReadmeFile>README.md</PackageReadmeFile>
		<PackageIcon>icon.png</PackageIcon>
		<PackageReleaseNotes>Jakar.Extensions.Maui.Syncfusion 9.0.0</PackageReleaseNotes>
		<Description>Extensions to aid in development.</Description>
		<GeneratePackageOnBuild>True</GeneratePackageOnBuild>
		<Title>Jakar.Extensions.Maui.Syncfusion</Title>
		<NeutralLanguage>en</NeutralLanguage>
		<PackageLicenseFile>LICENSE.txt</PackageLicenseFile>
		<IncludeSymbols>True</IncludeSymbols>
		<SymbolPackageFormat>snupkg</SymbolPackageFormat>


		<SupportedOSPlatformVersion Condition="$([MSBuild]::GetTargetPlatformIdentifier('$(TargetFramework)')) == 'ios'">15.0</SupportedOSPlatformVersion>
		<SupportedOSPlatformVersion Condition="$([MSBuild]::GetTargetPlatformIdentifier('$(TargetFramework)')) == 'maccatalyst'">15.0</SupportedOSPlatformVersion>
		<SupportedOSPlatformVersion Condition="$([MSBuild]::GetTargetPlatformIdentifier('$(TargetFramework)')) == 'android'">21.0</SupportedOSPlatformVersion>
		<SupportedOSPlatformVersion Condition="$([MSBuild]::GetTargetPlatformIdentifier('$(TargetFramework)')) == 'windows'">10.0.17763.0</SupportedOSPlatformVersion>
		<TargetPlatformMinVersion Condition="$([MSBuild]::GetTargetPlatformIdentifier('$(TargetFramework)')) == 'windows'">10.0.17763.0</TargetPlatformMinVersion>
		<SupportedOSPlatformVersion Condition="$([MSBuild]::GetTargetPlatformIdentifier('$(TargetFramework)')) == 'tizen'">6.5</SupportedOSPlatformVersion>
		<Product>Jakar.Extensions.Maui.Syncfusion</Product>
	</PropertyGroup>

	<ItemGroup>
	  <None Include="..\images\icon.png">
	    <Pack>True</Pack>
	    <PackagePath>\</PackagePath>
	  </None>
	  <None Include="..\LICENSE.txt">
	    <Pack>True</Pack>
	    <PackagePath>\</PackagePath>
	  </None>
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.Maui.Controls" />
		<PackageReference Include="Syncfusion.Maui.Charts" />
		<PackageReference Include="Syncfusion.Maui.Toolkit" />
		<PackageReference Include="Syncfusion.Maui.TreeView" />
		<PackageReference Include="Syncfusion.Maui.Scheduler" />
		<PackageReference Include="Syncfusion.Maui.Picker" />
		<PackageReference Include="Syncfusion.Maui.Expander" />
		<PackageReference Include="Syncfusion.Maui.PdfToImageConverter" />
		<PackageReference Include="Syncfusion.Maui.PdfViewer" />
		<PackageReference Include="Syncfusion.Maui.ProgressBar" />
		<PackageReference Include="Syncfusion.Maui.Buttons" />
		<PackageReference Include="Syncfusion.Maui.Popup" />
		<PackageReference Include="Syncfusion.Maui.TabView" />
		<PackageReference Include="Syncfusion.Maui.Inputs" />
		<PackageReference Include="Syncfusion.Maui.ListView" />
		<PackageReference Include="Syncfusion.Maui.DataForm" />
		<PackageReference Include="Syncfusion.Maui.Barcode" />
		<PackageReference Include="Syncfusion.Maui.DataGrid" />
		<PackageReference Include="Syncfusion.Maui.DataGridExport" />
		<PackageReference Include="Syncfusion.Maui.Maps" />
		<PackageReference Include="Syncfusion.Maui.PullToRefresh" />
		<PackageReference Include="Syncfusion.Maui.Backdrop" />
		<PackageReference Include="Syncfusion.Maui.Carousel" />
		<PackageReference Include="Syncfusion.Maui.NavigationDrawer" />
		<PackageReference Include="Syncfusion.Maui.Rotator" />
		<PackageReference Include="Syncfusion.Maui.Cards" />
		<PackageReference Include="Syncfusion.Maui.Chat" />
		<PackageReference Include="Syncfusion.Maui.SunburstChart" />
		<PackageReference Include="Syncfusion.Maui.RadialMenu" />
		<PackageReference Include="Syncfusion.Maui.TreeMap" />
		<PackageReference Include="Syncfusion.Maui.Kanban" />
	</ItemGroup>

	<ItemGroup>
	  <None Update="README.md">
	    <Pack>True</Pack>
	    <PackagePath>\</PackagePath>
	  </None>
	</ItemGroup>

</Project>
