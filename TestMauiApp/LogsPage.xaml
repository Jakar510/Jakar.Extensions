<?xml version="1.0"
      encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:testMauiApp="clr-namespace:TestMauiApp"
             x:Class="TestMauiApp.LogsPage"
             x:DataType="testMauiApp:LogsPage"
             Title="LogsPage">
    <ScrollView>
        <CollectionView IsGrouped="True"
                        CanMixGroups="False"
                        CanReorderItems="False"
                        ItemSizingStrategy="MeasureAllItems"
                        ItemsSource="{Binding Files}">
            <CollectionView.GroupHeaderTemplate>
                <DataTemplate x:DataType="testMauiApp:FileLogs">
                    <Label Text="{Binding Name}"
                           TextColor="Black"
                           BackgroundColor="LightGray"
                           FontAttributes="Bold"
                           FontSize="20" />
                </DataTemplate>
            </CollectionView.GroupHeaderTemplate>

            <CollectionView.GroupFooterTemplate>
                <DataTemplate x:DataType="testMauiApp:FileLogs">
                    <Label Text="{Binding Count, StringFormat='Total Logs: {0:D}'}"
                           Margin="0,0,0,10" />
                </DataTemplate>
            </CollectionView.GroupFooterTemplate>
        </CollectionView>
    </ScrollView>
</ContentPage>
