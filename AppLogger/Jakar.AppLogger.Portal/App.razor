@using Microsoft.AspNetCore.Mvc.ModelBinding
<CascadingBlazoredModal>
    <ModelStateProvider Name="@nameof(ModelStateDictionary)"
                        Value="new ModelStateDictionary()" >
        <Router AppAssembly="@typeof(App).Assembly" >
            <Found Context=" routeData " >
                <AuthorizeRouteView DefaultLayout="@typeof(MainLayout)"
                                    RouteData="@routeData" >
                    <Authorizing>
                        <text>Please wait, we are authorizing you.</text>
                    </Authorizing>
                </AuthorizeRouteView>
                <FocusOnNavigate RouteData="@routeData"
                                 Selector="h1" />
            </Found>
            <NotFound>
                <CascadingAuthenticationState>
                    <PageTitle>Not found</PageTitle>
                    <LayoutView Layout="@typeof(MainLayout)" >
                        <p>Sorry, there's nothing at this address.</p>
                    </LayoutView>
                </CascadingAuthenticationState>
            </NotFound>
        </Router>
    </ModelStateProvider>
</CascadingBlazoredModal>
